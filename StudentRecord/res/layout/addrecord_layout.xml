<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:background="@drawable/bgbar" >

 		<ImageView
 		    android:id="@+id/back"
 		    android:layout_width="57dp"
 		    android:layout_height="28dp"
 		    android:layout_marginBottom="5dp"
 		    android:layout_marginLeft="8dp"
 		    android:layout_marginTop="10dp"
 		    android:src="@drawable/back"
 		    android:clickable="true"
 		    android:focusable="true" >

        </ImageView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="记一笔"
            android:textColor="#fff"
            android:textSize="32sp" />
      
    </FrameLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="#f0f0f0">
        <ImageView 
            android:id="@+id/recording_type_ico"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            />
   
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#666"
            android:textStyle="bold"
            android:text="￥"
            android:textSize="45px" />

        <TextView
            android:id="@+id/recording_count"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#666"
            android:textStyle="bold"
            android:text="0.0"
            android:textSize="35sp" />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:orientation="vertical"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/vpager"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="150dp"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" >
        </android.support.v4.view.ViewPager>

  <!--   <GridView
        android:id="@+id/type_selections"
        android:layout_width="fill_parent"
        android:layout_height="151dp"
        android:verticalSpacing="10dp"
        android:numColumns="5" >
		</GridView>	-->
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" 
		    android:layout_marginTop="10dp">
        <TextView android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
		<LinearLayout 
		    android:id="@+id/dot_layout"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"></LinearLayout>
		
		 <TextView 
		    android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
		 </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="日期"
            android:textSize="20sp"/>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:background="@drawable/keyboard_selector"
            android:layout_marginRight="10dp"
            >
            <TextView 
                android:id="@+id/recording_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2014年7月2日"
                android:textSize="20sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="41dp"
        android:orientation="horizontal" >

        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="备注"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/recording_noting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:hint="不超过15个字" />

    </LinearLayout>
   	
	
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
         <TextView 
                android:id="@+id/block_one"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="1"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                
                <TextView 
                android:id="@+id/block_two"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="2"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                
                <TextView 
                android:id="@+id/block_three"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="3"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                
                <TextView
                    android:id="@+id/block_add"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/keyboard_selector"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#696969"
                    android:textSize="25sp" />

    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
         <TextView 
                android:id="@+id/block_four"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="4"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                
                <TextView 
                android:id="@+id/block_five"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="5"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                
                <TextView 
                android:id="@+id/block_six"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="6"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                
                <TextView
                    android:id="@+id/block_more"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/keyboard_selector"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:text="再来一笔"
                    android:textColor="#696969"
                    android:textSize="12sp" />

    </LinearLayout>
    
     </LinearLayout>
     
     <LinearLayout 
         android:layout_width="fill_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:orientation="horizontal">
       
         
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="0.25"
             android:orientation="vertical">
         <LinearLayout 
        	android:layout_width="fill_parent"
       	 	android:layout_height="match_parent"
        		android:orientation="horizontal"
        		android:layout_weight="1">
        	 <TextView 
                android:id="@+id/block_seven"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="7"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                <TextView 
                android:id="@+id/block_eight"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="8"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                <TextView 
                android:id="@+id/block_night"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="9"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/>
  				  </LinearLayout>
  				   <LinearLayout 
        	android:layout_width="fill_parent"
       	 	android:layout_height="match_parent"
        		android:orientation="horizontal"
        		android:layout_weight="1">
        	 <TextView 
                android:id="@+id/block_cancel"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="C"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                <TextView 
                android:id="@+id/block_zero"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="0"	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/> 
                <TextView 
                android:id="@+id/block_dot"
                 android:layout_width="match_parent"
                android:layout_height="match_parent"	
                android:textSize="25sp"	
                android:layout_weight="1"	 
                android:background="@drawable/keyboard_selector"
                android:text="."	
                android:textColor="#696969"
                android:gravity="center"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="true"/>
  				 </LinearLayout>
    	</LinearLayout>

    	<TextView
    	    android:id="@+id/block_ok"
    	    android:layout_width="75dp"
    	    android:layout_height="match_parent"
    	    android:background="@drawable/keyboard_selector"
    	    android:clickable="true"
    	    android:focusable="false"
    	    android:focusableInTouchMode="true"
    	    android:gravity="center"
    	    android:text="OK"
    	    android:textColor="#696969"
    	    android:textSize="25sp" />
         
     </LinearLayout>
     

</LinearLayout>
    
    
	
</LinearLayout>
